{% extends "base.html.twig" %}

{% block title %}Administration des Categories{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Ajouter une categorie</h1>
                {{ form_start(form) }}
    {{ form_row(form.name, {
        'label': 'Nom de la catégorie'
    }) }}
    {{ form_row(form.parent, {
        'label': 'Catégorie parente',
        'empty_data': null,
        'placeholder': 'Sélectionner une catégorie parente'
    }) }}
    {{ form_row(form.save, {
        'label': 'Enregistrer'
    }) }}
{{ form_end(form) }}
            </div>
        </section>
    </main>
{% endblock %}