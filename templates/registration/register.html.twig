{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container my-3 Kufam">
		<div class="row justify-content-center my-3">
			<div class="col-sm-10 col-md-8 col-lg-6 col-xl-6 my-3 bg-light">
				<h1>Inscription</h1>

				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}
                    <fieldset>
                        <legend>Mon identité</legend>
				{{ form_row(registrationForm.lastname) }}
				{{ form_row(registrationForm.firstname) }}
				{{ form_row(registrationForm.email) }}
                    </fieldset>
                    <fieldset>
                    <legend>Mes coordonées</legend>
                {{ form_row(registrationForm.address) }}
				{{ form_row(registrationForm.zipcode) }}
				{{ form_row(registrationForm.city) }}
                    </fieldset>
				{{ form_row(registrationForm.plainPassword,
                 {label: 'Mot de passe' }) }}

				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-dark btn-lg mb-3">
                M'inscrire
                </button>
                <a href="{{ path('app_login') }}" class="btn btn-secondary btn-lg mb-3 ">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
